  arr.forEach(r=>{
    if(!r || typeof r !== "object") return;

    // –¥–∞—Ç–∞
    const date =
      getVal(r, ["Data","–î–∞—Ç–∞","–î–∞—Ç–∞ –æ–ø–µ—Ä–∞—Ü—ñ—ó","Data ksiƒôgowania","Date"]) || "";

