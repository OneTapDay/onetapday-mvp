function resolveCategoryForKasa(k){
  const cats = (typeof getAllSpCats === "function") ? getAllSpCats() : [];

  // 1) —è–≤–Ω–æ–µ –ø–æ–ª–µ –∫–∞—Ç–µ–≥–æ—Ä–∏–∏
  const manualRaw = (k && (
