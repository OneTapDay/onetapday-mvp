window.appGoSection = function (secId) {
  const homeEl = document.getElementById('homeScreen');
  const topBar = document.querySelector('.top');

  try {
    const sec = document.getElementById(secId);

    // –ï—Å–ª–∏ —Ä–∞–∑–¥–µ–ª–∞ –Ω–µ—Ç ‚Äî –Ω–µ –ª–æ–º–∞–µ–º –≤—Å—ë
