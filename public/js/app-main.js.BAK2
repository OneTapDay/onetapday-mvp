    r["Termin p≈Çatno≈õci"]=toISO(due)||today();
    r["Kwota do zap≈Çaty"]=asNum(amt).toFixed(2);
    r["Waluta"]= detectCurrency(getVal(r,["Waluta"])||'');
    r["Dostawca"]=sup;

    saveLocal(); render(); pushState(); return;
  }
